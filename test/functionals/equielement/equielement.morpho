// Test equielements

import meshtools
import shapeopt

var m = linemesh(fn (t) [t, 0, 0], 0..1:0.5)

var le = EquiElement()

var v = m.vertexmatrix()
v.setcolumn(1, Matrix([0.3, 0, 0]))

print le.integrand(m)
// expect: [ 0 0.32 0 ]

print le.total(m)
// expect: 0.32

print le.gradient(m)
// expect: [ 0 -3.2 0 ]
// expect: [ 0 0 0 ]
// expect: [ 0 0 0 ]

var opt=ShapeOptimizer(m)

opt.addenergy(le)

opt.quiet=true
opt.relax(20)

print abs(opt.totalenergy())<1e-8
// expect: true
