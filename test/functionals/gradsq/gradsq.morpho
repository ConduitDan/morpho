// Test gradsq on a single triangle

import meshtools
import shapeopt

var m = Mesh("triangle.mesh")

var phi = Field(m)
phi[1]=1

var lel = GradSq(phi)

print lel.integrand(m)
// expect: [ 0.57735 ]

print lel.total(m)
// expect: 0.57735

print lel.gradient(m)
// expect: [ 0.192452 0.192452 -0.3849 ]
// expect: [ 0.333333 -0.333335 5.55112e-07 ]
// expect: [ 0 0 0 ]

print lel.fieldgradient(m, phi)
